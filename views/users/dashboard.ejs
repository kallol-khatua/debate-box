            </div>

			<ul class="box-info">
				<li>
					<i class='bx bxs-calendar-check'></i>
					<span class="text">
                        <% if(ongoingMeet){ %>
						    <h3><%= ongoingMeet.title %></h3>
						    <!-- <p>New Order</p> -->
                            <% if(user._id.toString() == currUser._id) {%>
                            <button><a href="/rooms/meeting?meetingId=<%= ongoingMeet.meetingId %>">Rejoin</a></button>
                            <% }else{ %>
                                <button><a href="/rooms/meeting?meetingId=<%= ongoingMeet.meetingId %>">Join</a></button>
                            <% } %>
                        <% } else {%>
                            <h3>No ongoing debates</h3>
                        <% } %>
					</span>
				</li>
				
			</ul>


			<div class="table-data">
				<div class="order">
					<div class="head">
						<h3>Joined debates</h3>
						
					</div>
                   <% if(joinedMeet && joinedMeet.length > 0){ %>
                        <table>
					    	<thead>
					    		<tr>
					    			<th>Host</th>
					    			<th>Last Joined</th>
					    			<th>Debate Status</th>
					    		</tr>
					    	</thead>
					    	<tbody>
                                <% for(meet of joinedMeet){ %>
                                    <tr>
                                        
                                        <td>
                                            <a href="./<%= meet.host._id %>">
                                            <img src="<%= meet.host.profile_image.url %>">
                                            <p><%= meet.host.username %></p>
                                        </a>
                                        </td>
                                        
                                        <td><%= meet.last_joined.toDateString() %></td>
                                        <% if(meet.roomId.isOver){ %>
                                            <td><span class="status completed">Over</span></td>
                                        <% }else { %>
                                            <td><span class="status pending">Ongoing</span></td>
                                        <% } %>
                                        
                                    </tr>
                                <% } %>
					    		
					    	</tbody>
					    </table>
                    <% } else { %>
                        <small>Not joined yet</small>
                    <% } %>
					
				</div>


				<div class="todo">
					<div class="head">
						<h3>Completed Debates</h3>
					</div>
                    <ul class="todo-list">
                        <% if(completedMeet && completedMeet.length > 0){ %>
                            <% for(meet of completedMeet){ %>
                                <li class="completed">
                                    <p><%= meet.title %></p>
                                </li>
                            <% } %>
                        <% } else { %>
                            <li class="">
                                <p>No Debates</p>
                            </li>
                        <% } %>
                    </ul>
					
				</div>
			</div>
		</main>
		

