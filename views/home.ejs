</head>
<style>
    a {
        text-decoration: none;
    }


    #paper {
        color: #FFF;
        font-size: 20px;
    }

    #margin {
        margin-left: 12px;
        margin-bottom: 20px;
        -webkit-user-select: none;
        -moz-user-select: none;
        -ms-user-select: none;
        -o-user-select: none;
        user-select: none;
    }

    .modal-dialog {
        position: relative;
        width: auto;
        /* margin: .5rem; */
        pointer-events: none;
    }

    @media (min-width: 576px) {
        .modal-dialog {
            max-width: unset;
            margin: 1.75rem auto;
        }
    }

    #text {
        width: 100%;
        overflow: hidden;
        background-color: #FFF;
        color: #222;

        font-weight: normal;
        font-size: 24px;
        resize: none;
        line-height: 40px;
        padding-left: 100px;
        padding-right: 100px;
        padding-top: 45px;
        padding-bottom: 34px;
        background-image: url(https://static.tumblr.com/maopbtg/E9Bmgtoht/lines.png), url(https://static.tumblr.com/maopbtg/nBUmgtogx/paper.png);
        background-repeat: repeat-y, repeat;
        -webkit-border-radius: 12px;
        border-radius: 12px;
        -webkit-box-shadow: 0px 2px 14px #000;
        box-shadow: 0px 2px 14px #000;
        border-top: 1px solid #FFF;
        border-bottom: 1px solid #FFF;
    }

    #button {
        cursor: pointer;
        margin-top: 20px;
        float: right;
        height: 40px;
        padding-left: 24px;
        overflow: hidden;

        font-family: Arial, Helvetica, sans-serif;
        font-weight: bold;
        font-size: 20px;
        color: #FFF;
        text-shadow: 0px -1px 0px #000000;
        -webkit-border-radius: 8px;
        border-radius: 8px;
        border-top: 1px solid #FFF;
        -webkit-box-shadow: 0px 2px 14px #000;
        box-shadow: 0px 2px 14px #000;
        background-color: #62add6;
        background-image: url(https://static.tumblr.com/maopbtg/ZHLmgtok7/button.png);
        background-repeat: repeat-x;
    }

    #button:active {
        zoom: 1;
        filter: alpha(opacity=80);
        opacity: 0.8;
    }

    #button:focus {
        zoom: 1;
        filter: alpha(opacity=80);
        opacity: 0.8;
    }

    #wrapper {

        margin-top: 24px;
        margin-bottom: 100px;
    }

    *::-webkit-scrollbar {
        width: 0px;
    }
    a{
        text-decoration: none;
    }

    .custom-popup {
        position: fixed;
        bottom: 0%;
        left: 50%;
        transform: translate(-50%, -50%);
        padding: 20px;
        color: #FFF;
        background-color: #150303;
        border: 1px solid #ccc;
        border-radius: 35px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.3);
        z-index: 9999;
        display: none;

    }
</style>

<body>
    <div class="custom-popup" id="popup">

        <!-- Popup content will be inserted here -->
    </div>

    <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" style="overflow: hidden; ">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">Let's give a new way of thinking</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div id="wrapper">
                        <form id="paper" method="get" action="">
                            <textarea placeholder="Change the World with a thought...." id="text" name="text" rows="5"
                                style="overflow: scroll; word-wrap: break-word; "></textarea>
                            <br>
                        </form>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Not Now</button>
                    <button type="button" class="btn btn-primary">Go</button>
                </div>
            </div>
        </div>
    </div>

    <!-- The Modal -->
    <div class="modal fade" id="myModal">
      <div class="modal-dialog">
        <div class="modal-content">
        
          <!-- Modal Header -->
          <div class="modal-header">
            <h4 class="modal-title">Let's give a new way of thinking</h4>
            <button type="button" class="close" data-dismiss="modal"></button>
          </div>

        <form action="/rooms/hostMeeting" method="post">
          <!-- Modal Body -->
          <div class="modal-body">
            <!-- Title Input Field -->
            <div class="form-group">
              <label for="title">Title:</label>
              <input name="title" type="text" class="form-control" id="title" required>
            </div>
            <!-- Description Input Field -->
            <div class="form-group">
              <label for="description">Description:</label>
              <input name="description" type="text" class="form-control" id="description" required>
            </div>
          </div>
          
          <!-- Modal Footer -->
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Not Now</button>
            <button type="submit" class="btn btn-primary">Go</button>
          </div>
        </form>

        </div>
      </div>
    </div>

    <nav>
        <div class="container">
            <h2 class="logo">DebateBox</h2>
            <!-- <div class="search-bar">
                <i class="uil uil-search"></i>
                <input type="search" placeholder="Search for creators, inspirations and projects" />
            </div> -->
            
            <div class="create">
                <label class="btn btn-primary" for="create-post" type="button" class="btn btn-primary button-90"
                    data-bs-toggle="modal" data-bs-target="#myModal">Create</label>
                    <!-- exampleModal -->
                    <!-- myModal -->
                <div class="profile-pic">
                    <a href="/users/profile/<%= currUser._id %>"><img src="<%= currUser.profile_image.url %>" alt="pic 1" /></a>
                </div>
            </div>
        </div>
    </nav>

    <!-- The Modal -->
    <div class="modal fade" id="bookmark">
        <div class="modal-dialog">
          <div class="modal-content">
          
            <!-- Modal Header -->
            <div class="modal-header">
              <h4 class="modal-title">You saved this debates for future reference</h4>
              <button type="button" class="close" data-dismiss="modal"></button>
            </div>
  
            <!-- Modal Body -->
            <div class="modal-body">
             <ul id="show-bookmark">
                
             </ul>
            </div>
            
            <!-- Modal Footer -->
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" id="close-bookmark">Close</button>
            </div>
          
          </div>
        </div>
      </div>

    <main>
        <div class="container">
            <div class="left">

                <div class="sidebar">
                    <a class="menu-item active" id="home-menu">
                        <span><i class="uil uil-home"></i></span>
                        <h3>Home</h3>
                    </a>
                   
                    <a class="menu-item " data-bs-toggle="modal" data-bs-target="#bookmark" onclick="bookmark()">
                        <span><i class="uil uil-bookmark"></i></span>
                        <h3>Bookmarks</h3>
                    </a>
                    
                    <a class="menu-item"  href="/users/logout">
                        <span><i id="logoutsign" class="fa-solid fa-arrow-right-from-bracket"></i></span>
                        <h3>Logout</h3>
                    </a>

                   
                </div>
            </div>



            <div class="middle">


                <!-- <form class="create-post">
                    <div class="profile-pic">
                        <img src="images/profile-8.jpg" alt="">
                    </div>
                    <input type="text" placeholder="What's on your mind Chirag?" id="create-post">
                    <button type="button" class="btn btn-primary button-90" data-bs-toggle="modal"
                        data-bs-target="#exampleModal">
                        Post
                    </button>
                </form> -->

                <div class="feeds">
                  <% for(room of rooms){ %>
                    <div class="feed">
                        <a href="/users/profile/<%= room.host._id %>">
                      <div class="user">
                          <div class="profile-pic">
                              <img src="<%= room.host.profile_image.url %>" alt="">
                          </div>
                          <div class="info">
                            <h3><%= room.host.username %></h3>
                              <small><%= room.createdAt.toDateString() %></small>
                              <small><%= room.createdAt.toLocaleTimeString('en-US', { hour12: true }) %></small>
                              
                          </div>

                      </div>
                    </a>
                      <div class="photo" style="padding: 8px;">
                        <h5><%= room.title %></h5>
                          <p><%= room.description %></p>
                      </div>

                      <div class="action-button">
                          <div class="interaction-button">
                              <!-- <a href="#" onclick="showPopup('You liked the post!')">
                                  <span><i class="uil uil-thumbs-up"></i></span>
                              </a> -->
                              <!-- Bookmark icon -->

                            <% if(room.host._id.toString() != String(currUser._id)) { %>
                                <% if(room.savefor.includes(String(currUser._id))) { %>
                                    <a onclick="unsavedebate('<%= room._id %>')">
                                        <span><i style="color: red;" id="<%= room._id %>" class="uil uil-bookmark"></i></span>
                                     </a>
                                <% } else { // %>
                                    <a onclick="savedebate('<%= room._id %>')">
                                        <span><i id="<%= room._id %>" class="uil uil-bookmark"></i></span>
                                    </a>
                                <% } %>
                            <% } %>

                              
                          </div>
                          <div class="join">
                              <span><a href="/rooms/meeting?meetingId=<%= room.meetingId %>"><button class="btn btn-primary button-90">
                                      join
                                  </button></span></a>
                          </div>
                      </div>
                  </div>
                  <% } %>
                </div>
            </div>

            
        </div>
    </main>

    <script src="/js/home.js"></script>
    <script>

        function bookmark() {
            const xhr = new XMLHttpRequest();
            xhr.open("GET", "/users/bookmark", true);
            xhr.setRequestHeader(
              "Content-Type",
              "application/x-www-form-urlencoded"
            );

            xhr.onreadystatechange = function () {
                if (xhr.readyState === XMLHttpRequest.DONE) {
                    if (xhr.status === 200) {
                        const response = JSON.parse(xhr.responseText);
                        if (response.success) {
                            // console.log(response.message);
                            // console.log(response.rooms);
                            let rooms = response.rooms;
                            let tab = document.getElementById("show-bookmark");
                            let html = "";
                            rooms.forEach(room => {
                                html += `<li>${room.title}<div class="join">
                              <span><a href="/rooms/meeting?meetingId=${ room.meetingId }"><button class="btn btn-primary button-90">
                                      join
                                  </button></span></a>
                          </div></li><hr>`

                                    
                            });
                            tab.innerHTML = "";
                            tab.insertAdjacentHTML("afterbegin", html)
                        } else {
                            console.log(response.message);
                            let tab = document.getElementById("show-bookmark");
                            let html = "No debates saved for reference! Save a debate";
                            tab.innerHTML = "";
                            tab.insertAdjacentHTML("afterbegin", html)
                        }
                    } else {
                        alert("Error occurred while making the request");
                    }
                }
            };
        
            xhr.send();
        }

        function savedebate(data) {
           

            const xhr = new XMLHttpRequest();
            xhr.open("POST", "/users/savedebate", true);
            xhr.setRequestHeader(
              "Content-Type",
              "application/x-www-form-urlencoded"
            );

            const senddata = `roomId=${data}`;

            xhr.onreadystatechange = function () {
                if (xhr.readyState === XMLHttpRequest.DONE) {
                    if (xhr.status === 200) {
                        const response = JSON.parse(xhr.responseText);
                        if (response.success) {
                            var popup = document.getElementById("popup");

                            popup.innerHTML = '<p>' + "Saved" + '</p>';

                            popup.style.display = "block";

                            setTimeout(function () {
                                popup.style.display = "none";
                            }, 2000);

                            document.getElementById(data).parentElement.parentElement.outerHTML = `<a onclick="unsavedebate('${data}')">
                                <span><i style="color: red;" id="${data}" class="uil uil-bookmark"></i></span>
                                    </a>`
                        } else {
                            console.log(response.message);
                        }
                    } else {
                        alert("Error occurred while making the request");
                    }
                }
            };
        
            xhr.send(senddata);
        }

        function unsavedebate(data) {

            const xhr = new XMLHttpRequest();
            xhr.open("POST", "/users/unsavedebate", true);
            xhr.setRequestHeader(
              "Content-Type",
              "application/x-www-form-urlencoded"
            );

            const senddata = `roomId=${data}`;

            xhr.onreadystatechange = function () {
                if (xhr.readyState === XMLHttpRequest.DONE) {
                    if (xhr.status === 200) {
                        const response = JSON.parse(xhr.responseText);
                        if (response.success) {
                            var popup = document.getElementById("popup");

                            popup.innerHTML = '<p>' + "Unsaved" + '</p>';

                            popup.style.display = "block";

                            setTimeout(function () {
                                popup.style.display = "none";
                            }, 2000);

                            document.getElementById(data).parentElement.parentElement.outerHTML = `<a onclick="savedebate('${data}')">
                                <span><i id="${data}" class="uil uil-bookmark"></i></span>
                                    </a>`
                        } else {
                            console.log(response.message);
                        }
                    } else {
                        alert("Error occurred while making the request");
                    }
                }
            };
        
            xhr.send(senddata);
        }
    </script>
</body>

</html>